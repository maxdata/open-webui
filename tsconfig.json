{
	"compilerOptions": {
	  "module": "esnext",
	  "target": "esnext",
	  "lib": ["dom", "esnext"],
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "types": ["svelte"],
	  "baseUrl": ".",
	  "paths": {
		"$lib/*": ["src/lib/*"]
	  }
	},
	"moduleResolution": "node",
	"types": ["node", "svelte"],
	"include": ["src/**/*", "src/**/*.svelte", "src/types"],
	"exclude": ["node_modules"]
  }