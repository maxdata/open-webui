{
    "version": "0.2.0",
    "configurations": [
        // Backend
        {
            "name": "FastAPI",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/backend",
            "module": "uvicorn",
            "args": [
                "open_webui.main:app",
                "--reload",
                "--host", "0.0.0.0", 
                "--port", "8080"
            ],            
            "justMyCode": true,
        },
        // Frontend
        {
            "name": "Svelte",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:///src/*": "${webRoot}/src/*"
            }
        }
    ],
    "compounds": [
        {
            "name": "Full Stack",
            "configurations": ["FastAPI", "Svelte"]
        }
    ]
}